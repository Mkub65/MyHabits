<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FirstApp.ViewModels"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             x:Class="FirstApp.DetailHabitPlanPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:DetailsHabitPlanVM x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Spacing="3">
            <Label Text="Details Of Selected Habit Plan" HorizontalOptions="Center" FontSize="20"/>
            <microcharts:ChartView x:Name="chartView" HeightRequest="150"/>
            <Label Text="Name" FontSize="15"/>
            <Entry x:Name="habitPlanName" Text="{Binding Source={StaticResource vm}, Path=HabitPlanName}"/>
            <Label Text="Start Date" FontSize="15"/>
            <Entry x:Name="habitPlanStartDate" Text="{Binding Source={StaticResource vm}, Path=StartDate}"/>
            <Label Text="End Date" FontSize="15"/>
            <Entry x:Name="habitPlanEndDate" Text="{Binding Source={StaticResource vm}, Path=EndDate}"/>
            <Button x:Name="DeleteHabitPlan" Command="{Binding Source={StaticResource vm},Path=DeleteCommand}" Text="Delete Habit Plan"/>
            <Button x:Name="UpdateHabitPlan" Command="{Binding Source={StaticResource vm}, Path=UpdateCommand}" Text="Update Habit Plan"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>  