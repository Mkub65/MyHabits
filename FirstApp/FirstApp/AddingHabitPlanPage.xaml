<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.AddingHabitPlanPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add new habit plan" />
            <Entry x:Name="habitPlanName" Placeholder="Name of Habit Plan"/>
            <DatePicker x:Name="startDate" />
            <DatePicker x:Name="endDate"/>
            <Button x:Name="addHabitPlan" Text="Add Habit Plan" Clicked="AddHabitPlan_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>